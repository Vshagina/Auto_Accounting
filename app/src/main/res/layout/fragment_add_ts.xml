<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/textView"
        android:layout_width="390dp"
        android:layout_height="162dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="42dp"
        android:layout_marginEnd="0dp"
        android:text="                 Авто Учёт \n             Добавьте своё \n     транспортное средство "
        android:textColor="@color/black"
        android:textSize="28dp"
        android:textStyle="italic" />

    <AutoCompleteTextView
        android:id="@+id/typeTS"
        android:layout_width="165dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="100dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="100dp"
        android:background="@drawable/effects"
        android:drawableStart="@drawable/baseline_chevron_left"
        android:drawablePadding="12dp"
        android:hint="Тип тс" />

    <AutoCompleteTextView
        android:id="@+id/model"
        android:layout_width="179dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/typeTS"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="7dp"
        android:layout_toEndOf="@+id/brand"
        android:background="@drawable/effects"
        android:drawableStart="@drawable/car_commute"
        android:drawablePadding="12dp"
        android:hint="Модель" />

    <AutoCompleteTextView
        android:id="@+id/brand"
        android:layout_width="179dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/typeTS"
        android:layout_alignParentStart="true"
        android:layout_marginStart="5dp"
        android:layout_marginTop="28dp"
        android:background="@drawable/effects"
        android:drawableStart="@drawable/car_commute"
        android:drawablePadding="12dp"
        android:hint="Марка" />

    <AutoCompleteTextView
        android:id="@+id/fuel"
        android:layout_width="179dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/model"
        android:layout_alignParentStart="true"
        android:layout_marginStart="5dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/effects"
        android:drawableStart="@drawable/battery"
        android:drawablePadding="12dp"
        android:hint="Вид топлива"
        android:textColor="@color/black" />

    <AutoCompleteTextView
        android:id="@+id/year"
        android:layout_width="179dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/brand"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="8dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="7dp"
        android:layout_toEndOf="@+id/fuel"
        android:background="@drawable/effects"
        android:drawableStart="@drawable/date"
        android:drawablePadding="12dp"
        android:hint="Год выпуска" />

    <Button
        android:id="@+id/buttonAddCar"
        android:layout_width="155dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/year"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="225dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="16dp"
        android:backgroundTint="@color/black"
        android:text="Добавить"
        android:textStyle="italic"/>
</RelativeLayout>