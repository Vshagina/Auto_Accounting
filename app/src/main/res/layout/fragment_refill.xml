<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RefillFragment">

    <TextView
        android:id="@+id/textViewRefill"
        android:layout_width="184dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="130dp"
        android:layout_marginLeft="150dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="130dp"
        android:text="Заправка"
        android:textColor="@color/black"
        android:textSize="30sp"
        android:textStyle="bold" />

    <AutoCompleteTextView
        android:id="@+id/fuelTypeRefill"
        android:layout_width="204dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textViewRefill"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="90dp"
        android:layout_marginTop="43dp"
        android:layout_marginEnd="90dp"
        android:background="@drawable/effects"
        android:drawableStart="@drawable/battery"
        android:drawablePadding="12dp"
        android:hint="Вид топлива" />

    <AutoCompleteTextView
        android:id="@+id/amountRefill"
        android:layout_width="237dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/fuelTypeRefill"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="90dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="90dp"
        android:background="@drawable/effects"
        android:drawableStart="@drawable/petrol_car"
        android:drawablePadding="12dp"
        android:hint="Количество литров" />

    <AutoCompleteTextView
        android:id="@+id/quantityRefill"
        android:layout_width="179dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/amountRefill"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="90dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="90dp"
        android:background="@drawable/effects"
        android:drawableStart="@drawable/money"
        android:drawablePadding="12dp"
        android:hint="Сумма" />

    <AutoCompleteTextView
        android:id="@+id/timeAndDateRefill"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/quantityRefill"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="90dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="90dp"
        android:background="@drawable/effects"
        android:drawableStart="@drawable/time"
        android:drawablePadding="12dp"
        android:hint="Время и дата" />

    <Button
        android:id="@+id/buttonRefill"
        android:layout_width="167dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/timeAndDateRefill"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="216dp"
        android:layout_marginTop="27dp"
        android:layout_marginEnd="28dp"
        android:backgroundTint="@color/black"
        android:textStyle="italic"
        android:text="Добавить" />


</RelativeLayout>